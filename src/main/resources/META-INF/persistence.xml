<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="weather_app" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/my_db"/>
            <property name="jakarta.persistence.jdbc.user" value="bestuser"/>
            <property name="jakarta.persistence.jdbc.password" value="bestuser"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>


        </properties>
    </persistence-unit>
</persistence>